<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/org_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:text="Компания: "
        />
    <TextView
        android:id="@+id/org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="ИП Осман"
        android:layout_toEndOf="@+id/org_title"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:text="Машина:     "
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="Toyota Hilux"
        android:layout_toEndOf="@+id/name_title"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:text="Гос-номер: "
        />
    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="0000000000"
        android:layout_toEndOf="@+id/number_title"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/vin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="VIN-CODE:   "
        />
    <TextView
        android:id="@+id/vin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="0000000000"
        android:layout_toEndOf="@+id/vin_title"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/car_max_litr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vin"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textColor="#000"
        android:text="No limit"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="далее"
        android:layout_margin="10dp"
        android:background="#1886F3"
        android:textSize="10dp"
        android:textColor="#fff"
        />
</RelativeLayout>