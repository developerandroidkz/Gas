<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="15dp"
        android:text="Начало смены:"
        />
    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Окончание смены:"
        android:layout_below="@+id/start"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <TextView
        android:id="@+id/released"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/end"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_margin="12dp"
        android:text="Реализовано:"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/released"
        android:text="Подробно о смене"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/gjhgd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="12dp"
        android:text="Введите свой пин-код для завершения"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/about"
        />
    <com.andrognito.pinlockview.IndicatorDots
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignTop="@+id/gjhgd"
        />
    <com.andrognito.pinlockview.PinLockView
        android:id="@+id/pin_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indicator_dots"
        android:layout_centerHorizontal="true"
        app:pinLength="4"
        app:keypadTextColor="#000000"
        app:keypadTextSize="30dp"
        app:keypadButtonSize="40dp"
        app:keypadVerticalSpacing="24dp"
        app:keypadHorizontalSpacing="36dp"
        app:keypadDeleteButtonSize="15dp"
        app:keypadShowDeleteButton="true"
        app:keypadDeleteButtonPressedColor="#1575C9"
        app:dotDiameter="12dp"
        app:dotSpacing="16dp"
        app:dotEmptyBackground="@color/colorAccent"
        app:dotFilledBackground="@color/colorPrimary"
        app:indicatorType="fillWithAnimation">
    </com.andrognito.pinlockview.PinLockView>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1886F3"
        android:textSize="12dp"
        android:textColor="#fff"
        android:layout_margin="12dp"
        android:text="Cдать смену"
        android:enabled="true"
        android:visibility="invisible"
        android:clickable="false"
        />
</RelativeLayout>