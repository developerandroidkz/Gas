<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="-"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="-"
        android:layout_below="@+id/date"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="-"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="-"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/vin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="-"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/car_max_litr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vin"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textColor="#000"
        android:text="----"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/value_in_litr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_max_litr"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:hint="Сколько литров "
        android:inputType="numberDecimal"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отправить"
        android:layout_margin="10dp"
        android:background="#1886F3"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_below="@+id/value_in_litr"
        />
</RelativeLayout>